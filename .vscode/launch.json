  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "启动程序",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_FILES": true,
        "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json"
      },
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src"],
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}